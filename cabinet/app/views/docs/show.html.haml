.wrapper_with_padding
  #doc_show
    %h1= @doc.title
    %p= simple_format(@doc.content)

    .buttons
      =link_to "Fix Doc", edit_doc_path(@doc), class: "button"
      -# Link to delete route, asks for user confirmation
      =link_to "Trash Doc", doc_path(@doc), method: :delete, data: {confirm: "Are you sure you want to delete this doc?"}, class: "button"